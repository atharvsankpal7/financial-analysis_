# Financial Analysis API - Environment Configuration
# Copy this file to .env and adjust values as needed

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Host to bind the server to
# Use 0.0.0.0 to accept connections from any IP (production)
# Use 127.0.0.1 for localhost only (development)
API_HOST=0.0.0.0

# Port to run the server on
API_PORT=8000

# Enable auto-reload on code changes (development only)
# Set to false in production
API_RELOAD=true

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================

# Path to the trained Keras model
# Relative to the api directory
MODEL_PATH=../train3/models/hybrid_lstm_attention.keras

# Path to the training dataset
# Used for fitting the scaler
DATASET_PATH=../train3/dataset_combined_2_5yr.csv

# ============================================================================
# PREDICTION CONFIGURATION
# ============================================================================

# Sequence length for predictions (in days)
# Must match the value used during training
SEQ_LEN=60

# Rolling window for smoothing (in days)
# Must match the value used during training
ROLLING_WINDOW=5

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Allowed origins for CORS
# Comma-separated list of URLs
# Use * to allow all origins (not recommended for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Allow credentials (cookies, authorization headers)
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Logging level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional)
# If not set, logs to console only
LOG_FILE=logs/api.log

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Maximum number of concurrent requests
MAX_WORKERS=4

# Request timeout in seconds
REQUEST_TIMEOUT=30

# ============================================================================
# DATA FETCHING CONFIGURATION
# ============================================================================

# Yahoo Finance request timeout (seconds)
YF_TIMEOUT=10

# Maximum retries for data fetching
YF_MAX_RETRIES=3

# Delay between retries (seconds)
YF_RETRY_DELAY=2

# ============================================================================
# CACHE CONFIGURATION (Optional - for future use)
# ============================================================================

# Enable caching
ENABLE_CACHE=false

# Cache TTL in seconds (e.g., 300 = 5 minutes)
CACHE_TTL=300

# ============================================================================
# SECURITY (Production)
# ============================================================================

# API Key for authentication (optional)
# If set, clients must include: Authorization: Bearer <API_KEY>
# API_KEY=your-secret-api-key-here

# Enable HTTPS redirect
FORCE_HTTPS=false

# ============================================================================
# MONITORING (Optional)
# ============================================================================

# Enable health check endpoint
ENABLE_HEALTH_CHECK=true

# Enable metrics collection
ENABLE_METRICS=false

# Metrics port (if separate from API)
METRICS_PORT=9090
